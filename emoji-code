<body>

<h2>Emoji Reaction Board</h2>

<div class="emoji-buttons">
  <button onclick="chosenEmoji('&#9917')">&#9917</button> 
  <button onclick="chosenEmoji('&#9918')">&#9918</button>
  <button onclick="chosenEmoji('&#127936')">&#127936</button>
  <button onclick="chosenEmoji('&#127933')">&#127933</button>
  <button onclick="chosenEmoji('&#127944')">&#127944</button>
  <button onclick="chosenEmoji('&#129358')">&#129358</button>
  <button onclick="chosenEmoji('&#129354')"> &#129354</button>
  <button onclick="chosenEmoji('&#127937')">&#127937</button>

</div>

<button id="clearBtn" onclick="RemoveAll()">Remove All</button>

<div class="grid" id="emoji-Grid"></div>

<script>
  var EmojiSelected = "";

  function chosenEmoji(emoji) {
    EmojiSelected = emoji;
  }

  var grid = document.getElementById("emoji-Grid");

  for (var i = 0; i < 30;i++){ 
    var cell = document.createElement("div");
    cell.className = "cell";
    cell.onclick = function() {
      if (this.innerHTML == EmojiSelected) {
        this.innerHTML = "";
      } else {
        this.innerHTML = EmojiSelected;
      }
    };
    grid.appendChild(cell);
  }

  function RemoveAll() {
    var cells = document.getElementsByClassName("cell");
    for (var i = 0; i < cells.length; i++) {
      cells[i].innerHTML = "";
    }
  }
</script>

</body>
